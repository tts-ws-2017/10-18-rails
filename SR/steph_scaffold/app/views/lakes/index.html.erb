<p id="notice"><%= notice %></p>

<h1>Lakes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Deptht</th>
      <th>Circumference</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lakes.each do |lake| %>
      <tr>
        <td><%= lake.name %></td>
        <td><%= lake.deptht %></td>
        <td><%= lake.circumference %></td>
        <td><%= lake.location %></td>
        <td><%= link_to 'Show', lake %></td>
        <td><%= link_to 'Edit', edit_lake_path(lake) %></td>
        <td><%= link_to 'Destroy', lake, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


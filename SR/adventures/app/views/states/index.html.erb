<div class="formstar">

<p id="notice"><%= notice %></p>

<h1>States</h1>

<div class="tablestar">
<div style="overflow-x:auto;">
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Capital</th>
      <th>Population</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.id %></td>
        <td><%= state.name %></td>
        <td><%= state.capital %></td>
        <td><%= state.population %></td>
        <td><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= link_to 'Show', state %></td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_state_path(state) %></td>
        <td><span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> <%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'New State', new_state_path %></button>

</div>
<div class="formstar">
<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<div class="tablestar">
<div style="overflow-x:auto;">
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Cost</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id %></td>
        <td><%= activity.name %></td>
        <td><%= activity.cost %></td>
        <td><%= activity.duration %></td>
        <td><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= link_to 'Show', activity %></td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> <%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'New Activity', new_activity_path %></button>
</div>
